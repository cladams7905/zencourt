{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Node.js server specific overrides
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["apps/video-server/src/*"],
      "@db/*": ["packages/db/*"],
      "@shared/*": ["packages/shared/*"],
      "@web/*": ["apps/web/*"],
      "@video-server/*": ["apps/video-server/*"]
    }
  },
  "include": [
    "src/**/*",
    "../../packages/shared/**/*.ts",
    "../../packages/db/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
