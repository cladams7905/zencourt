{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Node.js server specific overrides
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "../../packages/shared/**/*.ts",
    "../../packages/db/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
