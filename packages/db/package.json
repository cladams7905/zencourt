{
  "name": "@zencourt/db",
  "version": "0.1.0",
  "private": true,
  "main": "./index.ts",
  "types": "./index.ts",
  "scripts": {
    "db:generate": "dotenv -e ../../.env.local -- drizzle-kit generate --config=drizzle/drizzle.config.ts",
    "db:migrate": "dotenv -e ../../.env.local -- drizzle-kit migrate --config=drizzle/drizzle.config.ts",
    "db:push": "dotenv -e ../../.env.local -- drizzle-kit push --config=drizzle/drizzle.config.ts",
    "db:studio": "dotenv -e ../../.env.local -- drizzle-kit studio --config=drizzle/drizzle.config.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.0",
    "typescript": "^5"
  }
}
