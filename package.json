{
  "name": "zencourt-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@zencourt/web",
    "dev:web": "npm run dev --workspace=@zencourt/web",
    "dev:video": "npm run dev --workspace=@zencourt/video-server",
    "build": "npm run build --workspaces --if-present",
    "build:local": "npm run build:local --workspace=@zencourt/web",
    "build:web": "npm run build --workspace=@zencourt/web",
    "build:video": "npm run build --workspace=@zencourt/video-server",
    "lint": "npm run lint --workspaces --if-present",
    "env:pull": "cd apps/web && vercel env pull ../../.env.local",
    "db:generate": "npm run db:generate --workspace=@zencourt/db",
    "db:migrate": "npm run db:migrate --workspace=@zencourt/db",
    "db:migrate:prod": "dotenv -e .env.prod -- sh -c 'cd packages/db && dotenv -e ../../.env.prod -- drizzle-kit migrate --config=drizzle/drizzle.config.ts'",
    "db:push": "npm run db:push --workspace=@zencourt/db",
    "db:studio": "npm run db:studio --workspace=@zencourt/db",
    "docker:rebuild": "npm run docker:rebuild --workspace=@zencourt/video-server",
    "docker:up": "npm run docker:up --workspace=@zencourt/video-server",
    "docker:down": "npm run docker:down --workspace=@zencourt/video-server",
    "docker:logs": "npm run docker:logs --workspace=@zencourt/video-server",
    "test:video": "npm run test --workspace=@zencourt/video-server",
    "test:video:watch": "npm run test:watch --workspace=@zencourt/video-server",
    "test:video:coverage": "npm run test:coverage --workspace=@zencourt/video-server",
    "type-check:web": "npm run type-check --workspace=@zencourt/web",
    "type-check:video": "npm run type-check --workspace=@zencourt/video-server"
  },
  "dependencies": {
    "@react-google-maps/api": "^2.20.8",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "dotenv-cli": "^11.0.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "lucide-react": "0.545.0",
    "esbuild": "^0.25.12",
    "fast-xml-parser": "^5.3.4",
    "@aws-sdk/xml-builder": {
      "fast-xml-parser": "^5.3.4"
    },
    "@esbuild-kit/core-utils": {
      "esbuild": "^0.25.12"
    },
    "@stackframe/stack": {
      "lucide-react": "0.545.0",
      "@stackframe/stack-ui": {
        "lucide-react": "0.545.0"
      }
    }
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
