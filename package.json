{
  "name": "zencourt-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@zencourt/web",
    "dev:web": "npm run dev --workspace=@zencourt/web",
    "dev:video": "npm run dev --workspace=@zencourt/video-server",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace=@zencourt/web",
    "build:video": "npm run build --workspace=@zencourt/video-server",
    "lint": "npm run lint --workspaces --if-present",
    "env:pull": "cd apps/web && vercel env pull ../../.env.local",
    "db:generate": "npm run db:generate --workspace=@zencourt/db",
    "db:migrate": "npm run db:migrate --workspace=@zencourt/db",
    "db:push": "npm run db:push --workspace=@zencourt/db",
    "db:studio": "npm run db:studio --workspace=@zencourt/db"
  },
  "devDependencies": {
    "@types/node": "^20",
    "dotenv-cli": "^11.0.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  }
}
